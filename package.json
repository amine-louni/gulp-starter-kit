{
  "name": "gulp-starter-kit",
  "version": "1.0.0",
  "description": "A Gulp Starter Kit for frontend developers.",
  "author": "Son-Tung Ngo <hi@nstung.com>",
  "license": "MIT",
  "private": true,
  "main": "src/js/main.js",
  "scripts": {
    "clean": "gulp clean",
    "dev": "gulp dev",
    "build": "gulp build",
    "build-dev": "npm run build-css && npm run build-js && npm run build-images",
    "build-css": "gulp buildCSS",
    "build-js": "gulp buildJS",
    "build-images": "gulp buildImages"
  },
  "filesToCopyGlobs": {
    "fonts": "src/**/*.{eot,svg,ttf,woff,woff2}"
  },
  "globs": {
    "images": "src/**/*.{jpg,jpeg,png,gif,svg}",
    "fonts": "src/**/*.{eot,svg,ttf,woff,woff2}",
    "html": "src/**/*.html",
    "js": "src/**/*.js",
    "scss": "src/**/*.scss",
    "yaml": "src/data/data.yml"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ]
  },
  "browserslist": [
    "last 1 version"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "autoprefixer": "^9.5.1",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.5",
    "browserify": "^16.2.3",
    "cssnano": "^4.1.10",
    "fs-extra": "^8.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-data": "^1.3.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-nunjucks-render": "^2.2.3",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "js-yaml": "^3.13.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  }
}
